<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBg">

    <LinearLayout
        android:id="@+id/line0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp">


        <TextView
            android:layout_weight="1"
            android:layout_width="200dp"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content"
            android:font="@font/robotoregular"
            android:text="Счет списания"
            android:textColor="#B6B5B5"
            android:textSize="14sp"             />



        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Баланс счета"
            android:textColor="#B6B5B5"
            android:font="@font/robotoregular"
            android:textSize="14sp" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/line1"
        app:layout_constraintTop_toBottomOf="@id/line0"
        app:layout_constraintLeft_toLeftOf="@id/line0"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/layout_bg">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="8dp"
                android:text="Тинькофф"
                android:textColor="@color/colorText"
                android:textSize="16sp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/layout_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="18 769 ₽"
                android:textColor="@color/colorText"
                android:textSize="16sp" />



        </androidx.constraintlayout.widget.ConstraintLayout>





    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        app:layout_constraintTop_toBottomOf="@id/line1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp">


        <TextView
            android:layout_weight="1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:font="@font/robotoregular"
            android:text="Получатель"
            android:textColor="#B6B5B5"
            android:textSize="14sp"             />



        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Вид операции"
            android:textColor="#B6B5B5"
            android:font="@font/robotoregular"
            android:textSize="14sp" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/line3"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/layout_bg">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="8dp"
                android:text="Тинькофф"
                android:textColor="@color/colorText"
                android:textSize="16sp" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/layout_bg">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="8dp"
                android:text="Тинькофф"
                android:textColor="@color/colorText"
                android:textSize="16sp" />



        </androidx.constraintlayout.widget.ConstraintLayout>





    </LinearLayout>






    <LinearLayout
        android:id="@+id/line4"
        app:layout_constraintTop_toBottomOf="@id/line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_weight="1"
            android:id="@+id/cat_name_tv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:font="@font/robotoregular"
            android:text="Сумма"
            android:textColor="#B6B5B5"
            android:textSize="14sp"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Дата"
            android:textColor="#B6B5B5"
            android:font="@font/robotoregular"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line5"
        app:layout_constraintTop_toBottomOf="@id/line4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:background="@drawable/layout_bg">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="8dp"
                android:hint="@string/analytics"
                android:inputType="number"
                android:backgroundTint="@android:color/transparent"
                android:textColorHint="#B6B5B5"
                android:textColor="@color/colorText"
                android:textSize="16sp" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/balance_con_l"
            android:layout_width="158dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:paddingRight="2dp"
            android:paddingBottom="8dp"
            android:background="@drawable/layout_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="10.12.2021"
                android:textColor="@color/colorText"
                android:textSize="16sp" />



        </androidx.constraintlayout.widget.ConstraintLayout>




    </LinearLayout>

    <TextView
        android:id="@+id/commentary_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Commentary"
        android:textColor="#B6B5B5"
        app:layout_constraintTop_toBottomOf="@id/line5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="44dp"/>








    <EditText
        app:layout_constraintTop_toBottomOf="@id/commentary_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/editTextTextPersonName"
        android:layout_width="328dp"
        android:layout_height="112dp"
        android:padding="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:textColorHint="#B6B5B5"
        android:textColor="@color/colorText"
        android:hint="   Комментарий"
        android:background="@drawable/layout_bg"
        android:backgroundTint="#37474F"/>


    <Button
        android:id="@+id/save_oa_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="102dp"
        android:layout_marginRight="102dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/layout_bg"
        android:backgroundTint="#37474F"
        android:text="Сохранить"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>