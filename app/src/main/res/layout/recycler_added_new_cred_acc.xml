<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="43dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/button_shape">

    <TextView
        android:id="@+id/tv_cred_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="8dp"
        android:text="@string/category1"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_cred_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="#333333"
        android:text="150 000 ₽ "
        android:textSize="16sp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/tv_cred_lim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_cred_sum"
        app:layout_constraintRight_toRightOf="parent"
        android:text="лимит: 150 000 ₽"
        android:textSize="8sp"
        android:layout_marginEnd="40dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@+id/tv_cred_sum"
        app:layout_constraintLeft_toRightOf="@+id/tv_cred_sum"
        android:src="@drawable/ic_arrow_right"/>



</androidx.constraintlayout.widget.ConstraintLayout>