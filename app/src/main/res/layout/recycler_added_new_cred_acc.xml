<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="42dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    android:background="@color/colorBg">


    <TextView
        android:id="@+id/tv_cred_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:text="@string/category1"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_cred_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/ic_arrow_right"
        android:text="150 000 ₽"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/tv_cred_lim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_cred_sum"
        app:layout_constraintRight_toLeftOf="@id/ic_arrow_right"
        android:textColor="@color/colorText"
        android:text="лимит: 150 000 ₽"
        android:textSize="8sp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="7dp"
        />

    <ImageView
        android:id="@+id/ic_arrow_right"
        android:layout_width="7dp"
        android:layout_height="12dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/arrow_right"/>



</androidx.constraintlayout.widget.ConstraintLayout>