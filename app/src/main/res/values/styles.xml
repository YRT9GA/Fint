<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBg</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#ECEFF1</item>
        <item name="android:datePickerDialogTheme">@style/CalendarDatePickerDialog</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:datePickerDialogTheme">@style/CalendarDatePickerDialog</item>

    </style>

    <style name="NewTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#263238</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#ECEFF1</item>
        <item name="android:datePickerDialogTheme">@style/CalendarDatePickerDialog</item>

    </style>


    <!-- стиль для текста свитча. -->
    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

    </style>

    <style name="CalendarDatePickerDialog"  parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#37474F</item>
        <item name="android:textColorPrimary">#ECEFF1</item>
        <item name="android:windowBackground">#37474F</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>



</resources>